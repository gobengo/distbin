{
  "compileOnSave": true,
  "compilerOptions": {
    "noImplicitAny": true,
    "types": ["node"],
    "allowJs": true,
    "outDir": "dist",
    "module": "commonjs",
    "target": "es6",
    "pretty": true,
    "lib": ["es7", "es2017"],
    "sourceMap": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts", "bin/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
